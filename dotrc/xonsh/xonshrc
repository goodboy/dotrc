def add_site_path(
    args: tuple,
    path: str = p"~/.local/"
) -> None:

    if args:
        path: str = args[0]

    path = Path(path)
    if 'lib' not in str(path):
        path = path / 'lib'

    paths: list[str] = []
    for p in map(
        lambda s: str(s.resolve()),
        path.glob("python*/site-packages")
    ):
        if p not in sys.path:
            paths.append(p)
            site.addsitedir(p)

    print(f'Hacking in to $PYTHONPATH:\n{paths}\n')

