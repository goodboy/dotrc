#
# .zshrc config file
#

# history
HISTFILE=$HOME/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
HISTIGNORE=' '
setopt appendhistory
setopt extended_history
setopt hist_expire_dups_first
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_verify
setopt inc_append_history
setopt share_history

# completion
zstyle :compinstall filename '$HOME/.zshrc'
autoload -Uz compinit && compinit

# changing directories
#setopt autocd
setopt autopushd
setopt cdable_vars
setopt chase_links
setopt pushd_ignore_dups

# fxpansion and globbing
setopt extendedglob
setopt nomatch
setopt notify

# turn off zle beep
unsetopt beep

# {{{1 Bindkeys
# zle bindkey mappings
bindkey -v              # use vi keymap and bind 'main' to it (so we're modifying 'main')
# bindkey -N mymap viins  # create my customer keymap based on viins
bindkey "\b" vi-backward-delete-char

# hist searching in both the viins and vicmd keymaps
bindkey -M viins '^r' history-incremental-search-backward
bindkey -M vicmd '^r' history-incremental-search-backward

# buffer stack access
bindkey '^w' push-line
bindkey '^e' get-line
#}}}

# Display settings
# If not running interactively, don't do this
[[ $- != *i* ]] && return

# load snippets
for snippets (${HOME}/.zsh_snippets/*.zsh(N))
      source $snippets
